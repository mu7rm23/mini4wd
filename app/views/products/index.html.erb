<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tamiya_id) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:keyword) %></th>
      <th><%= model_class.human_attribute_name(:zero_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:type5_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:s1_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:s2_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:sfm_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:stz_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:sx_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:sxx_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:vs_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:stzx_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:ar_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:ms_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:ma_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:fma_chassis_flag) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, product_path(product) %></td>
        <td><%= product.tamiya_id %></td>
        <td><%= product.category %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.keyword %></td>
        <td><%= product.zero_chassis_flag %></td>
        <td><%= product.type5_chassis_flag %></td>
        <td><%= product.s1_chassis_flag %></td>
        <td><%= product.s2_chassis_flag %></td>
        <td><%= product.sfm_chassis_flag %></td>
        <td><%= product.stz_chassis_flag %></td>
        <td><%= product.sx_chassis_flag %></td>
        <td><%= product.sxx_chassis_flag %></td>
        <td><%= product.vs_chassis_flag %></td>
        <td><%= product.stzx_chassis_flag %></td>
        <td><%= product.ar_chassis_flag %></td>
        <td><%= product.ms_chassis_flag %></td>
        <td><%= product.ma_chassis_flag %></td>
        <td><%= product.fma_chassis_flag %></td>
        <td><%= product.description %></td>
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
